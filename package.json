{
    "name": "anovel-vscode",
    "displayName": "anovel-vscode",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:anovel",
        "workspaceContains:anovel.json"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "anovel",
                "aliases": [
                    "ANovel"
                ],
                "extensions": [
                    ".anovel"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "anovel",
                "scopeName": "source.anovel",
                "path": "./syntaxes/anovel.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.46.0",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "typescript": "^4.1.2"
    }
}